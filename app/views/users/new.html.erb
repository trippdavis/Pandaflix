<div class="row">
  <div class="col-xs-4 col-xs-offset-1">
    <h1>Sign up!</h1>

    <ul>
      <% @user.errors.full_messages.each do |err_msg| %>
        <li><%= err_msg %></li>
      <% end %>
    </ul>

    <form action="/user" method="POST">
      <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">


      <div class="form-group">
        <label for="user_username">Username</label>
        <input
          type="text"
          class="form-control"
          name="user[username]"
          id="user_username"
          value="<%= @user.username %>">
      </div>
      <br>

      <div class="form-group">
        <label for="user_password">Password</label>
        <input
          type="password"
          class="form-control"
          name="user[password]"
          id="user_password">
      </div>
      <br>

      <button name="submit" class="btn btn-primary">Create User!</button>
    </form>
  </div>
</div>
